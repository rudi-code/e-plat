<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ugm.dteti.se.eplat.activity.ManualSimulation">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Address" />

        <EditText
            android:id="@+id/editServerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:text="192.168.0.103" />

        <TextView
            android:id="@+id/txtDevID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle ID" />

        <EditText
            android:id="@+id/editDevID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:text="12345" />

        <TextView
            android:id="@+id/txtDevType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Type" />

        <Spinner
            android:id="@+id/spinVehicleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnManualMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Simulation" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>